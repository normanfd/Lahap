<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:baselineAligned="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_m"
    android:paddingTop="@dimen/spacing_m"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <ImageView
            android:id="@+id/frag_food_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:adjustViewBounds="true"
            android:contentDescription="@string/product_id"
            android:src="@drawable/app_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_m"
            android:paddingRight="@dimen/spacing_m">

            <TextView
                android:id="@+id/frag_food_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:paddingBottom="@dimen/spacing_xs"
                android:textSize="@dimen/textsize_m"
                android:textStyle="bold"
                tools:text="Product name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productPriceRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="@dimen/spacing_m"
                    android:paddingEnd="@dimen/spacing_m"
                    android:visibility="gone"
                    android:textSize="@dimen/textsize_s"
                    tools:text="1500 USD" />

                <TextView
                    android:id="@+id/frag_food_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textsize_s"
                    tools:text="1500 USD" />

            </LinearLayout>

            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textSize="@dimen/textsize_s"
                tools:text="15 pcs" />

            <TextView
                android:id="@+id/frag_food_seller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:paddingTop="@dimen/spacing_xs"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/textsize_s"
                tools:text="Some product info" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>