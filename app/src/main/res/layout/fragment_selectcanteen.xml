<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/banner"
            app:cardCornerRadius="6dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pilih_kantin"
            android:layout_below="@id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilih_kantin"
            android:textStyle="bold"
            android:textSize="8pt"
            android:layout_margin="8dp">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/pilih_kantin"
            android:id="@+id/rv_canteen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            tools:listitem="@layout/item_row_canteen"
            android:layout_marginTop="@dimen/spacing_xl"/>

        <TextView
            android:id="@+id/konten"
            android:layout_below="@id/rv_canteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/konten_untuk_kamu"
            android:textStyle="bold"
            android:textSize="8pt"
            android:layout_margin="8dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/data_konten1"
            android:layout_below="@id/konten"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/konten_3"
                android:scaleType="centerCrop"
                android:contentDescription="@string/todo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="4dp"
                android:text="@string/title_konten_1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/data_konten2"
            android:layout_below="@id/data_konten1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/konten_2"
                android:scaleType="centerCrop"
                android:contentDescription="@string/todo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="4dp"
                android:text="@string/title_kontent_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/data_konten3"
            android:layout_below="@id/data_konten2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/konten_1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/todo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="4dp"
                android:text="@string/tittle_konten_3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/spacing_xs"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="50dp"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_m">

                <ImageView
                    android:id="@+id/userVideoThumbImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dip" />

                <TextView
                    android:id="@+id/userVideoTitleTextView"
                    style="@style/listTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@id/userVideoThumbImageView"
                    android:layout_toRightOf="@id/userVideoThumbImageView"
                    android:padding="@dimen/spacing_s"
                    android:text="@string/empty_textview"
                    android:textSize="@dimen/textsize_m" />

                <TextView
                    android:id="@+id/userVideoDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/userVideoTitleTextView"
                    android:layout_toEndOf="@id/userVideoThumbImageView"
                    android:layout_toRightOf="@id/userVideoThumbImageView"
                    android:paddingLeft="@dimen/spacing_s"
                    android:paddingStart="@dimen/spacing_s"
                    android:text="@string/empty_textview"
                    android:textColor="@color/grey_dark"
                    android:textDirection="locale"
                    android:textSize="@dimen/textsize_xs" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>




</androidx.core.widget.NestedScrollView>