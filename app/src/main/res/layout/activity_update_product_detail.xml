<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.AddNewProductActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/product_image_maintain"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/todo"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/product_name_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:hint="@string/product_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_design"
                android:importantForAutofill="no"
                android:layout_below="@id/product_image_maintain"
                tools:targetApi="o"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                />

            <EditText
                android:id="@+id/product_description_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="6dp"
                android:padding="20dp"
                android:hint="@string/product_description"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_design"
                android:importantForAutofill="no"
                android:layout_below="@+id/product_name_maintain"/>

            <EditText
                android:id="@+id/product_menu_detail_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="6dp"
                android:padding="20dp"
                android:hint="@string/menu_detail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_design"
                android:importantForAutofill="no"
                android:layout_below="@+id/product_description_maintain"/>

            <EditText
                android:id="@+id/product_nutrition_detail_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="6dp"
                android:padding="20dp"
                android:hint="@string/nutrition_detail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_design"
                android:importantForAutofill="no"
                android:layout_below="@+id/product_menu_detail_maintain"/>

            <EditText
                android:id="@+id/product_price_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="6dp"
                android:padding="20dp"
                android:hint="@string/product_price"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_design"
                android:importantForAutofill="no"
                android:layout_below="@+id/product_nutrition_detail_maintain"/>

            <Button
                android:id="@+id/apply_chg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_changes"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="17dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/product_price_maintain"
                />

            <Button
                android:id="@+id/delete_product_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete_this_product"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="17dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:layout_below="@+id/apply_chg_btn"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>